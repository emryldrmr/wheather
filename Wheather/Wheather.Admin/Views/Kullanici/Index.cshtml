@model PagedList.IPagedList<Wheather.Data.Model.Kullanici>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı soyadı</th>
                            <th>Email</th>
                            <th>Kullanıcı Adı</th>
                            <th>Şifre</th>
                            <th>Yetki</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                        <tr>
                            <th>#</th>
                            <th>Adı soyadı</th>
                            <th>Email</th>
                            <th>Kullanıcı Adı</th>
                            <th>Şifre</th>
                            <th>Yetki</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </tfoot>*@
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="label label-success">@item.id</span></td>
                                <td>@item.adsoyad</td>
                                <td>@item.email</td>
                                <td>@item.kullanici_adi</td>
                                <td>@item.sifre</td>
                                <td>@item.Yetki.yetki_adi</td>
                                <td>@item.tarih</td>
                                <td>
                                    @if (item.aktif == true)
                                    {
                                        <b class="label label-success">Aktif</b>
                                    }
                                    else
                                    {
                                        <b class="label label-danger">Pasif</b>
                                    }
                                </td>

                                <td>

                                    <a href="@Url.Action("Duzenle","Kullanici", new {ID=item.id})" class="btn btn-success">Düzenle</a>
                                    <a href="@Url.Action("Detay","Kullanici", new {ID=item.id})" class="btn btn-primary">Detay</a>
                                    <a href="@Url.Action("Onay","Kullanici", new {ID=item.id })" class="btn btn-warning">Aktif/Pasif</a>

                                    <a href="#" data-id="@item.id" id="KullaniciSil" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

